<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorLightGrey</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/default_textview_padding</item>
    </style>

    <style name="UserInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">@dimen/default_textview_padding</item>
        <item name="android:layout_marginRight">@dimen/default_textview_padding</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="PathField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_textview_padding</item>
        <item name="android:layout_marginRight">@dimen/default_textview_padding</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SmallHorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/default_textview_padding</item>
        <item name="android:layout_marginRight">@dimen/default_textview_padding</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
